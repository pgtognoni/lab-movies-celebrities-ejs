<h2>Edit Movie</h2>
<% console.log(findOne) %> 

    <form method='POST' action="/movies/<%= findOne._id %>/edit">
        <label for="title"> Title
            <input type="text" name="title" value="<%= findOne.title %>">
        </label>
        <label for="genre"> Genre 
            <input type="text" name="genre" value="<%= findOne.genre %>">
        </label>
        <label for="plot"> Plot
            <input type="text" name="plot" value="<%= findOne.plot %>">
        </label>
        <label for="cast"> Cast 
            <br>
            <% castArr.forEach(cast => { %>
                <%= cast.name %> 
                <input type="checkbox" name="cast"  value="<%= cast._id %>" <% if (findOne.cast.includes(cast._id)) { %> checked
                <% } %>>
                <br>
            <% }) %>
        </label>
        <br>
        <button type="submit">Submit</button>
    </form>
 
